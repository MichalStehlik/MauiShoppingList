<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiShoppingList.Views.AddPage"
             Title="AddPage">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Name" />
            <Entry Text="{Binding NewName}" />
            <Label Text="Notes" />
            <Entry Text="" />
            <Label Text="Done" />
            <Switch IsToggled="True" />
            <Button Text="Add" Command="{Binding AddCommand}" CommandParameter="" Clicked="Save_Clicked" Margin="5"/>
            <Button Text="Back" Clicked="Cancel_Clicked" Margin="5"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>